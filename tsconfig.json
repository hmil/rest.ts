{
    "compilerOptions": {
        "baseUrl": "packages",
        "strict": true,
        "importHelpers": false,
        "inlineSourceMap": true,
        "declaration": true,
        "target": "es5",
        "module": "commonjs",
        "removeComments": false,
        "plugins": [
            { "name": "tslint-language-service" }
        ],
        "lib": [
            "es2015"
        ],
    },
    "exclude": [
        "**/dist/"
    ],
    "references": [
        { "path": "./packages/rest-ts-core" },
        { "path": "./packages/rest-ts-express" },
        { "path": "./packages/rest-ts-axios" },
    ]
}
